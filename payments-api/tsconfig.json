{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "esnext"
      ],
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "sourceMap": true,
      "skipLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
   },
   "include": [
      "src"
   ],
   "exclude": [
      ".vscode",
      "dist",
      "build",
      "bin",
      "node_modules",
   ]
}